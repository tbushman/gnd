div.grid-container.inner
	div.grid-right
		p#info.tb-font-s(width="100%")
		//(style="float: left;")
		form#form.tb-u-100(enctype="multipart/form-data", method="POST", action="/api/editcontent/"+doc.urltitle+"/"+doc.pageindex+"/"+index+"", style="margin-bottom: 50px")
			div.tb-u-100.ms-TextField
				label.ms-Label Title
				input.ms-TextField-field(type="text", name="title", value= contentData.title)

			div.tb-u-100
				label.ms-Label Description 
				textarea.ms-TextField-field#inputtext(type="text", name="description", value= contentData.description, placeholder= contentData.description)
			div.tb-u-100
				span.tb-font-s#previewtext #{contentData.description}
			input(type="hidden", id="inputimg", name="img")
			if (drawtype)
				input(type="hidden", id="inputimg_"+drawtype+"_"+layer+"", name= contentData[drawtype][layer].name)
			div.tb-u-100
				button.ms-Button.ms-Button--primary.tb-u-100.block.spacer(id="submit", type="submit", ariaDescription="Save this Sandwich")
					span.ms-Button-label Save
		p.tb-font-xs#info
		div.tb-u-33
			a.ms-Button.ms-Button--alert#deletefeature.tb-u-100(href="#", role="button")
				span.ms-Button-label Delete Post
				span.tb-font-s(style="display: none") This cannot be undone. Continue?
		div.tb-u-33
			a.ms-Button.tb-u-100(href="/", role="button")
				span.ms-Button-label.tb-u-100 Cancel