if (menu === 'edit')
	div.grid-right
		include docedit.pug
if (menu === 'sign')
	div.grid-right
		div.grid-header
			
			a.img(@click="setDrawType('filling', $event)", title="Sign")
				.ui
					img(src="/images/filling/filling_0.svg")
			
			a.img(@click="setDrawType('substrates', $event)", title="Erase")
				.ui
					img(src="/images/filling/tools_0.svg")
if (menu === 'doc')
		
	div.grid-right
		//- if (infowindow === 'edit')
		//- 
		//- else
		//- div.grid-container.inner.row
		div.grid-header
		
			p.tb-font-xl(v-if="doc && doc.properties" v-text="doc.properties.title")
		
		
		div.grid-mid(style="padding: 6px 0 0 6px;")
			span.tb-10-m0(v-html="marked(doc.properties.description)")
			div.row(v-if="doc.sig && doc.sig.length > 0")
				div.tb-03-m0(v-for="(sig, s) in doc.sig")
					//- img(:src="sig.img")
					span.tb-font-s(v-text="'/'+sig.givenName+'/'")
	div.grid-footer
		a.img(@click="initSig", title="Sign")
			.ui
				img(src="/images/icons/edit.svg")
		p.tb-font-xxxs.hideoverlap(v-text="'Sign to indicate support'")
